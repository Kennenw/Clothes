<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>
            HomeController
        </welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ManageCategoryController</servlet-name>
        <servlet-class>Controllers.ManageCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewCategory</servlet-name>
        <servlet-class>Controllers.AddNewCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerOrderController</servlet-name>
        <servlet-class>Controllers.ManagerOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStatusOrderController</servlet-name>
        <servlet-class>Controllers.UpdateStatusOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>Controllers.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/HomeController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RevenueController</servlet-name>
        <servlet-class>Controllers.RevenueController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartController</servlet-name>
        <servlet-class>Controllers.UpdateCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageCategoryController</servlet-name>
        <url-pattern>/managecategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewCategory</servlet-name>
        <url-pattern>/AddNewCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerOrderController</servlet-name>
        <url-pattern>/ManagerOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStatusOrderController</servlet-name>
        <url-pattern>/UpdateStatusOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RevenueController</servlet-name>
        <url-pattern>/Revenue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCartController</servlet-name>
        <url-pattern>/UpdateCart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
